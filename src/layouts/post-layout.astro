---
import type { Categories } from '@/types'

import Layout from '@/layouts/base-layout.astro'

interface Props {
  category: Categories
  description: string
  publishedAt: Date
  title: string
}

const { category, description, title } = Astro.props
---

<Layout description={description} label={category} title={title}>
  <article
    class="max-w-none xat-typo prose prose-truegray dark:prose-invert"
  >
    <slot />
  </article>
</Layout>
