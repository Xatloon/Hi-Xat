---
interface Props {
  description: string
  label: string
  showRedirect?: boolean
  title: string
  url: string
}

const { description, label, showRedirect, title, url } = Astro.props;
---
<a href={url} target={showRedirect ? '_blank' : '_self'}>
  <div class="flex items-center justify-between gap-2 overflow-hidden border-2 border-decoration rounded-xl p-4 transition-colors hover:border-primary">
    <div class="flex flex-col gap-1">
      <span class="xat-typo text-sm text-primary" transition:name="post-label">
        {label}
      </span>
      <h3 class="font-semi" transition:name="post-title">
        {title}
      </h3>
      <p class="xat-typo text-sm text-mute" transition:name="post-description">
        {description}
      </p>
    </div>
    {showRedirect && (
      <span class="i-mingcute-external-link-line grow-0 text-decoration"></span>
    )}
  </div>
</a>
