---
import { Image } from 'astro:assets'

import Avatar from '@/assets/image/avatar.webp'
---

<header transition:persist class="fixed z-50 w-full flex items-center justify-between p-6 desktop:w-2/3 tablet:w-4/5">
  <a href="/">
    <Image
      alt="Avatar"
      class="size-10 border-2 border-decoration/50 rounded-full shadow-xl dark:border-decoration-dark/50"
      loading="eager"
      src={Avatar}
    />
  </a>
  <button aria-label="Theme Toggle" class="size-10 flex items-center justify-center border-2 border-decoration/50 rounded-full bg-mute/10 shadow-xl backdrop-blur dark:border-decoration-dark/50" id="theme-toggle">
    <span class="i-mingcute-sun-line dark:i-mingcute-moon-stars-line size-5 dark:size-5"></span>
  </button>
</header>
