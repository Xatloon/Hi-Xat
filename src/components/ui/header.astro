---
import { Image } from 'astro:assets'

import Avatar from '@/assets/image/avatar.webp'
---

<header class="fixed z-50 flex w-full items-center p-6 sm:w-4/5 md:w-2/3">
  <a href="/">
    <Image
      alt="Avatar"
      class="rounded-full shadow-xl"
      height={40}
      loading="eager"
      src={Avatar}
      width={40}
    />
  </a>
</header>

