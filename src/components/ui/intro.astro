---
interface Props {
  label?: string
  title?: string
}

const { label, title } = Astro.props
---
<section
  class="flex w-full flex-col gap-4 bg-cover p-6 pt-24 tablet:w-4/5 desktop:w-2/3"
>
  <span class="text-2xl text-primary dark:text-primary-dark">{label ?? <span class="i-mingcute-sparkles-2-fill text-4xl"></span>}</span>
  <h2 class="text-3xl font-bold">{title ?? 'Coding with Love, Exploring the World.'}</h2>
  <div class="flex items-center gap-4 py-2 text-xl leading-4">
  {
    !title && (
      <a aria-label="GitHub" class="" href="https://github.com/xatloon" target="_blank"><span class="i-mingcute-github-line"></span></a>
      <a aria-label="Twitter/X" class="" href="https://x.com/xatloon" target="_blank"><span class="i-mingcute-social-x-line"></span></a>
      <a aria-label="Telegram" class="" href="https://t.me/xatloon" target="_blank"><span class="i-mingcute-telegram-line"></span></a>
    )
  }
</section>
